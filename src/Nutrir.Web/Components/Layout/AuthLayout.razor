    <div class="auth-container">
        <div class="text-center mb-8">
            <img src="nutrir.svg" alt="Nutrir" class="auth-logo" />
        </div>
        <div class="card auth-card sectionFadeIn">
            @Body
        </div>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet>
