@inherits LayoutComponentBase

<div class="flex justify-center items-center" style="min-height: 100vh; background: var(--color-bg);">
    <div style="width: 100%; max-width: 480px; padding: var(--space-6);">
        <div class="text-center mb-8">
            <h1 style="font-size: var(--text-3xl); font-family: var(--font-display); font-weight: 700; color: var(--color-primary);">Nutrir</h1>
        </div>
        <div class="card">
            @Body
