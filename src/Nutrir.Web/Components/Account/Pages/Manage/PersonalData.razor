@page "/Account/Manage/PersonalData"

@inject IdentityUserAccessor UserAccessor

<PageTitle>Personal Data</PageTitle>

<div class="manage-section-header">
    <h3>Personal Data</h3>
    <p class="text-muted">Download or delete your personal data</p>
</div>

<StatusMessage />

<div class="card card-flat mb-6">
    <p class="text-sm mb-4" style="color: var(--color-text);">Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
    <div class="alert alert-warning">
        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
    </div>
</div>

<div class="flex gap-2 flex-wrap">
    <form action="Account/Manage/DownloadPersonalData" method="post">
        <AntiforgeryToken />
        <button class="btn btn-primary" type="submit">Download</button>
    </form>
    <a href="Account/Manage/DeletePersonalData" class="btn btn-danger">Delete</a>
</div>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        _ = await UserAccessor.GetRequiredUserAsync(HttpContext);
    }
}
