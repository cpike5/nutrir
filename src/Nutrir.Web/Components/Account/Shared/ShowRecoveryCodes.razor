<StatusMessage Message="@StatusMessage" />

<div class="settings-section">
    <div class="section-heading">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m15.5 7.5 2.3 2.3a1 1 0 0 0 1.4 0l2.1-2.1a1 1 0 0 0 0-1.4L19 4"/><path d="m21 2-9.6 9.6"/><circle cx="7.5" cy="15.5" r="5.5"/>
        </svg>
        <span>Recovery codes</span>
    </div>
    <p class="section-desc">Store these codes securely. You will need them if you lose access to your authenticator.</p>
    <div class="section-body">
        <div class="alert alert-warning mb-4" role="alert">
            <strong>Put these codes in a safe place.</strong>
            <p>If you lose your device and don't have the recovery codes you will lose access to your account.</p>
        </div>

        <div class="recovery-codes">
            @foreach (var recoveryCode in RecoveryCodes)
            {
                <code>@recoveryCode</code>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
